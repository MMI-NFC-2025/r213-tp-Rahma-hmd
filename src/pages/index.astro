---
import Layout from "../layouts/Layout.astro";
---

<Layout titre="Accueil">
	<!-- Hero Section -->
	<section class="bg-blue-600 text-white py-16 px-4">
		<div class="max-w-6xl mx-auto text-center">
			<h1 class="text-4xl font-bold mb-4">Agence Immobilière</h1>
			<p class="text-lg mb-6">Trouvez votre propriété idéale</p>
			<a
				href="/offres"
				class="bg-white text-blue-600 px-6 py-2 rounded font-bold hover:bg-gray-100"
			>
				Voir les offres
			</a>
		</div>
	</section>

	<!-- Content Section -->
	<section class="py-12 px-4 bg-white">
		<div class="max-w-6xl mx-auto">
			<h2 class="text-2xl font-bold mb-6 text-gray-800">À propos</h2>
			<p class="text-gray-700 mb-4">
				Nous vous aider à trouver votre maison de rêve. Vente, achat, ou
				location, nous sommes là pour vous.
			</p>
		</div>
	</section>
</Layout>
