---
const { offre } = Astro.props;
---

<article
    class="rounded-xl border border-gray-200 bg-white p-4 shadow-sm hover:shadow-md transition-shadow"
>
    <div class="mt-3 flex items-start justify-between gap-3">
        <div>
            <h3 class="text-lg font-semibold text-gray-900">
                {offre.nomMaison}
            </h3>
            <p class="text-sm text-gray-600">{offre.adresse}</p>
        </div>
        <p class="text-right text-indigo-600 text-base font-bold">
            {offre.prix} €/mois
        </p>
    </div>

    {
        offre.favori && (
            <div class="mt-2 inline-flex items-center rounded-full bg-yellow-100 px-2 py-1 text-xs font-semibold text-yellow-800">
                ★ Favori
            </div>
        )
    }

    <div class="mt-3 flex gap-4 text-sm text-gray-700">
        <span>{offre.surface} m²</span>
        <span>{offre.nbChambres} ch.</span>
        <span>{offre.nbSdb} sdb</span>
    </div>
</article>
